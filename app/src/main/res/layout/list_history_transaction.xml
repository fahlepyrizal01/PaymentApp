<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        android:layout_marginStart="32dp"
                                        android:layout_marginEnd="32dp"
                                        android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="1.0"
                                        app:layout_constraintVertical_bias="1.0" android:id="@+id/cardView">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="ID Transaksi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewIDTransaction"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp" android:textStyle="bold"
                    android:textColor="#009688" android:textAlignment="center" android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="3dp" android:id="@+id/textView19"
                    app:layout_constraintTop_toBottomOf="@+id/textViewIDTransaction"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@android:color/background_dark" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="ID Pengirim :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@+id/textView19"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textViewIDTransaction"
                    android:textColor="@android:color/background_dark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewIDSender"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:text="ID Pengirim"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/textView6"/>
            <TextView
                    android:text="Nama Pengirim :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@+id/textViewIDSender"
                    app:layout_constraintEnd_toStartOf="@+id/textViewFullNameSender"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewIDSender"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textColor="@android:color/background_dark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewFullNameSender"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewIDSender"
                    android:text="Nama Pengirim"
                    app:layout_constraintTop_toBottomOf="@+id/textView8"
                    app:layout_constraintStart_toStartOf="@id/textView8"
                    app:layout_constraintHorizontal_bias="0.0"
            />
            <TextView
                    android:text="ID Penerima :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFullNameSender"
                    app:layout_constraintStart_toStartOf="@+id/textViewFullNameSender"
                    android:textColor="@android:color/background_dark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewIDReceiver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewFullNameSender"
                    android:text="ID Penerima"
                    app:layout_constraintTop_toBottomOf="@+id/textView10"
                    app:layout_constraintStart_toStartOf="@+id/textView10"
            />
            <TextView
                    android:text="Nama Penerima :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewIDReceiver"
                    app:layout_constraintStart_toStartOf="@+id/textViewIDReceiver"
                    android:textColor="@android:color/background_dark"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewFullNameReceiver"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/textViewIDReceiver"
                    android:text="Nama Penerima"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/textView9"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="3dp" android:id="@+id/textView24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@android:color/background_dark"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/textViewFullNameReceiver" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Total Bayar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textViewNominal"
                    app:layout_constraintEnd_toEndOf="@+id/textViewFullNameReceiver" android:textSize="18sp"
                    android:textColor="#009688"
                    android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/textView24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textViewFullNameReceiver"
            />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>