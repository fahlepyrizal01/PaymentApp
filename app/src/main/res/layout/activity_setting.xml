<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SettingActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp" app:srcCompat="@drawable/ic_arrow_back_white_24dp"
            android:id="@+id/imageButton" android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@id/toolbar4" app:layout_constraintTop_toTopOf="@id/toolbar4"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/toolbar4"
            android:layout_marginStart="8dp" android:scaleType="fitXY"/>
    <TextView
            android:text="Pengaturan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView15" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="@+id/toolbar4"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintTop_toTopOf="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"/>
    <Button
            android:text="Ganti Password"
            android:layout_width="0dp"
            android:layout_height="52dp" android:id="@+id/buttonChangePassword"
            app:layout_constraintTop_toBottomOf="@+id/toolbar4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/custom_button_4"
            android:textAlignment="textStart" android:paddingLeft="20dp" android:textSize="18sp"/>
    <Button
            android:text="Edit Profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonEditProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/buttonChangePassword"
            android:background="@drawable/custom_button_4"
            android:textAlignment="textStart" android:paddingLeft="20dp" android:textSize="18sp"/>
    <Button
            android:text="Kebijakan"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonTerm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/buttonEditProfile" android:background="@drawable/custom_button_4"
            android:textAlignment="textStart" android:paddingLeft="20dp" android:textSize="18sp"/>
    <Button
            android:text="Bantuan"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonHelp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/buttonTerm" android:background="@drawable/custom_button_4"
            android:textAlignment="textStart" android:paddingLeft="20dp" android:textSize="18sp"/>
    <Button
            android:text="KELUAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonLogout4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonHelp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_button_2" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:paddingBottom="15dp" android:paddingTop="15dp"
            android:paddingLeft="30dp" android:paddingRight="30dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>