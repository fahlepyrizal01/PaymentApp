<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.RegisterActivity" android:background="@drawable/bg">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="187dp"
            tools:layout_editor_absoluteX="139dp">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content"
                                                     android:orientation="vertical">
            <ImageView
                    android:src="@drawable/logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp" android:id="@+id/imageView2"
                    android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextFullName"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" android:hint="Nama Lengkap"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="32dp" android:background="@drawable/custom_edit_text"
                    android:textSize="24sp" android:padding="10dp"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    android:hint="Email"
                    android:background="@drawable/custom_edit_text"
                    android:textSize="24sp" android:padding="10dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextFullName"
                    app:layout_constraintStart_toStartOf="@+id/editTextFullName"
                    app:layout_constraintEnd_toEndOf="@+id/editTextFullName" android:inputType="textEmailAddress"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextPhoneNumber"
                    android:hint="Nomor Telepon"
                    android:background="@drawable/custom_edit_text"
                    android:textSize="24sp" android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@+id/editTextFullName"
                    app:layout_constraintEnd_toEndOf="@+id/editTextFullName" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
                    android:inputType="phone"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextPassword"
                    android:hint="Password"
                    android:background="@drawable/custom_edit_text"
                    android:textSize="24sp" android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@+id/editTextFullName"
                    app:layout_constraintEnd_toEndOf="@+id/editTextFullName" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editTextPhoneNumber"
                    android:inputType="textPassword"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editTextAddress"
                    android:hint="Alamat"
                    android:background="@drawable/custom_edit_text"
                    android:textSize="24sp" android:padding="10dp"
                    app:layout_constraintStart_toStartOf="@+id/editTextFullName"
                    app:layout_constraintEnd_toEndOf="@+id/editTextFullName" app:layout_constraintHorizontal_bias="0.0"
                    android:inputType="textMultiLine" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextPassword"
            />
            <Button
                    android:text="DAFTAR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonRegister"
                    app:layout_constraintStart_toStartOf="@+id/editTextAddress"
                    app:layout_constraintEnd_toEndOf="@+id/editTextAddress"
                    android:background="@drawable/custom_button" android:textSize="24sp" android:textStyle="bold"
                    android:textColor="@android:color/background_light" android:paddingBottom="15dp"
                    android:paddingRight="30dp" android:paddingLeft="30dp" android:paddingTop="15dp"
                    app:layout_constraintHorizontal_bias="0.505" android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextAddress"/>
            <TextView
                    android:text="Sudah punya akun?"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView50" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/buttonRegister"
                    app:layout_constraintStart_toStartOf="parent" android:textSize="18sp"
                    android:textColor="@android:color/background_dark" android:textAlignment="textEnd"
                    app:layout_constraintEnd_toStartOf="@+id/textViewLogin" android:layout_marginTop="32dp"/>
            <TextView
                    android:text="Masuk Sekarang"
                    android:layout_width="0dp"
                    android:textColor="#416BCF"
                    android:layout_height="wrap_content" android:id="@+id/textViewLogin"
                    app:layout_constraintTop_toTopOf="@+id/textView50"
                    app:layout_constraintBottom_toBottomOf="@+id/textView50" android:textAlignment="textStart"
                    app:layout_constraintStart_toEndOf="@+id/textView50" app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18sp" android:paddingLeft="5dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>