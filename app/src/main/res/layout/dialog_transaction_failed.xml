<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@drawable/failed" android:id="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>
    <TextView
            android:text="TRANSAKSI GAGAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp" android:textStyle="bold"
            android:textColor="#9C161C"/>
    <Button
            android:text="OKE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonOke"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13" app:layout_constraintStart_toStartOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="@+id/textView13" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:textSize="24sp" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:paddingBottom="15dp" android:paddingTop="15dp"
            android:paddingLeft="30dp" android:paddingRight="30dp" android:background="@drawable/custom_button_3"/>
</android.support.constraint.ConstraintLayout>