<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextOldPasswordChangePassword"
            android:hint="Kata Sandi Lama"
            android:background="@drawable/custom_edit_text"
            android:textSize="18sp" android:padding="10dp"
            android:inputType="textPassword" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextNewPasswordChangePassword2"
            android:hint="Kata Sandi Baru"
            android:background="@drawable/custom_edit_text"
            android:textSize="18sp" android:padding="10dp"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextOldPasswordChangePassword"
            app:layout_constraintStart_toStartOf="@+id/editTextOldPasswordChangePassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextOldPasswordChangePassword"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextNewRepasswordChangePassword"
            android:hint="Ketik Ulang Kata Sandi Baru"
            android:background="@drawable/custom_edit_text"
            android:textSize="18sp" android:padding="10dp"
            android:inputType="textPassword"
            app:layout_constraintStart_toStartOf="@+id/editTextOldPasswordChangePassword"
            app:layout_constraintEnd_toEndOf="@+id/editTextOldPasswordChangePassword"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewPasswordChangePassword2"
    />
    <Button
            android:text="SIMPAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSaveChangePassword"
            android:background="@drawable/custom_button"
            android:textStyle="bold" android:textColor="@android:color/background_light" android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewRepasswordChangePassword"
            app:layout_constraintStart_toStartOf="@+id/editTextNewRepasswordChangePassword"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/editTextNewRepasswordChangePassword"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:paddingBottom="15dp" android:paddingLeft="30dp"
            android:paddingRight="30dp" android:paddingTop="15dp"/>
</android.support.constraint.ConstraintLayout>