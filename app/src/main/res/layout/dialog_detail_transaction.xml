<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize" android:id="@+id/toolbar2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="DETAIL TRANSAKSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="30sp"
            android:textStyle="bold" android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="@id/toolbar2"
            app:layout_constraintStart_toStartOf="@id/toolbar2" app:layout_constraintTop_toTopOf="@id/toolbar2"
            app:layout_constraintBottom_toBottomOf="@id/toolbar2"/>
    <TextView
            android:text="ID Pengirim :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:textSize="24sp" app:layout_constraintEnd_toStartOf="@+id/textViewIDSender"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewIDSender"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/textView6" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Nama Pengirim :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewFullNameSender"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewFullNameSender"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="ID Penerima :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/textViewIDReceiver"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewIDReceiver"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"/>
    <TextView
            android:text="Nama Penerima :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewFullNameReceiver" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewFullNameReceiver"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9" app:layout_constraintTop_toTopOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9"/>
    <TextView
            android:text="Total Bayar :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textSize="24sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView9"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewTotalPay"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/textView11"
            app:layout_constraintBottom_toBottomOf="@+id/textView11"/>
    <Button
            android:text="BAYAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonPay"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:background="@drawable/custom_button" android:paddingBottom="15dp" android:paddingTop="15dp"
            android:paddingLeft="30dp" android:paddingRight="30dp"/>
    <Button
            android:text="BATAL"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonCancel"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPay" app:layout_constraintStart_toStartOf="@+id/buttonPay"
            app:layout_constraintEnd_toEndOf="@+id/buttonPay" android:paddingBottom="15dp" android:paddingTop="15dp"
            android:textSize="24sp" android:textStyle="bold" android:textColor="@android:color/background_light"
            android:background="@drawable/custom_button_2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
</android.support.constraint.ConstraintLayout>