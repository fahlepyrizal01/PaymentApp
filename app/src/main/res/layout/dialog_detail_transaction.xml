<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="ID Penerima :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:textSize="18sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:textColor="@android:color/background_dark"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewIDReceiverDetail"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView10" android:text="ID Penerima"/>
    <TextView
            android:text="Nama Penerima :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textViewIDReceiverDetail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewIDReceiverDetail"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewFullNameReceiverDetail"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:text="Nama Penerima"/>
    <TextView
            android:text="Total Bayar :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textViewFullNameReceiverDetail"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textViewTotalPayDetail"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            android:text="Total Bayar"/>
    <Button
            android:text="BAYAR"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonPayDetail"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTotalPayDetail"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            android:textColor="@android:color/background_light" android:textStyle="bold"
            android:background="@drawable/custom_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonCancelDetail"
            android:layout_marginEnd="3dp" android:layout_marginRight="3dp" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="BATAL"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/buttonCancelDetail"
            android:textSize="18sp" android:textStyle="bold" android:textColor="@android:color/background_light"
            android:background="@drawable/custom_button_2" app:layout_constraintBottom_toBottomOf="@+id/buttonPayDetail"
            app:layout_constraintStart_toEndOf="@+id/buttonPayDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonPayDetail" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>