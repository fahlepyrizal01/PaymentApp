<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity" android:background="@drawable/bg">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                     android:layout_height="match_parent"
                                                     android:orientation="vertical">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp" app:srcCompat="@drawable/logo" android:id="@+id/imageViewLogo"
                    android:layout_marginTop="100dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/custom_edit_text"
                    android:id="@+id/editTextEmailProfile"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:inputType="textEmailAddress"
                    android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:textSize="18sp"
                    android:padding="10dp" android:hint="Email"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/custom_edit_text"
                    android:id="@+id/editTextPasswordRegister"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/editTextEmailProfile"
                    app:layout_constraintStart_toStartOf="@+id/editTextEmailProfile"
                    app:layout_constraintEnd_toEndOf="@+id/editTextEmailProfile" android:inputType="textPassword"
                    android:hint="Password" android:textSize="18sp" android:padding="10dp"/>
            <Button
                    android:text="MASUK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/buttonLogin"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/custom_button"
                    android:textColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@+id/editTextPasswordRegister"
                    app:layout_constraintEnd_toEndOf="@+id/editTextPasswordRegister"
                    app:layout_constraintStart_toStartOf="@+id/editTextPasswordRegister" android:textSize="18sp"
                    android:textStyle="bold" android:paddingBottom="15dp" android:paddingTop="15dp"
                    android:paddingLeft="30dp" android:paddingRight="30dp"/>
            <TextView
                    android:text="Belum punya akun?"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView50"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewRegister" android:textAlignment="textEnd"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLogin" android:layout_marginTop="32dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="Daftar Sekarang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewRegister"
                    android:textColor="#416BCF"
                    android:textSize="14sp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView50" android:paddingLeft="5dp"
                    app:layout_constraintTop_toTopOf="@+id/textView50"
                    app:layout_constraintBottom_toBottomOf="@+id/textView50"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>